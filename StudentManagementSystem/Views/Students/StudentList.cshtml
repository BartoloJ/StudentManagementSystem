@model IEnumerable<StudentManagementSystem.Models.Student>

<h2 class="text-center my-4">Student List</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Roll No</th>
            <th>Section</th>
            <th>Program</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.RollNo</td>
                <td>@student.Section</td>
                <td>@student.Program</td>
                <td>
                    <a asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id"
                        class="btn btn-primary btn-sm me-2">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-controller="Students" asp-action="Delete" asp-route-id="@student.Id"
                        class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3 class="text-center my-4">Add New Student</h3>
<form asp-action="AddStudent" method="post" class="p-4 border rounded bg-light">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Name">Name:</label>
            <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter student name" required>
        </div>
        <div class="form-group col-md-6">
            <label for="RollNo">Roll No:</label>
            <input type="text" class="form-control" id="RollNo" name="RollNo" placeholder="Enter roll number" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Section">Section:</label>
            <input type="text" class="form-control" id="Section" name="Section" placeholder="Enter section" required>
        </div>
        <div class="form-group col-md-6">
            <label for="Program">Program:</label>
            <input type="text" class="form-control" id="Program" name="Program" placeholder="Enter program" required>
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Add Student</button>
</form>